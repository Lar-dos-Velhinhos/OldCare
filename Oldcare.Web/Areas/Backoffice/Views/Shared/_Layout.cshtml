<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lar dos velhinhos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Oldcare.Web.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>
<body class="oc-text-default font-poppins-regular oc-default-private-bg">
    <header>
        <div class="container-fluid">
            <div class="row ">
                <div class="oc-deep-ocean-blue-bg px-sm-2 px-0" style="width: 15vw;">
                    <div class="d-flex flex-column align-items-center align-items-sm-center px-3 text-white min-vh-100">
                        <div class="w-100 text-center p-1">
                            <a href="/">
                                <img class="img-fluid" src="~/lib/media/site/images/clean-logotype.png" width="94" />
                            </a>
                        </div>
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start oc-side-menu" id="menu">



                            <li class="nav-item pt-3 dar pb-4">
                                <div class="row px-0 fas fa-arrow-right oc-btn-transition-right">
                                   <div class="col-1"></div>
                                    <div class="col-11">
                                        <ul type="none" class="navbar" style="">
                                            <li style="color: blue;">
                                                <img class="img-fluid" src="~/lib/media/site/images/icons/secretary-dark.svg" width="36" />
                                                </li>
                                            <li style="color: white;"><a>Item 1</a></li>
                                            <li style="color: yellow;"><a>Item 1</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <a href="#" class="nav-link align-middle px-0 my-3">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline hope-green-text">
                                        <img class="img-fluid hope-green-text img-above" src="~/lib/media/site/images/icons/secretary.svg" width="48" data-mdb-toggle="tooltip" title="Secretaria" />
                                    </span>
                                </a>
                            </li>



                            <li>
                                <a href="#" class="nav-link px-0 align-middle px-0 my-3">
                                    <img class="img-fluid hope-green-text" src="~/lib/media/site/images/icons/nurse.svg" width="48" data-mdb-toggle="tooltip" title="Enfermaria" />
                                </a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 align-middle px-0 my-3">
                                    <img class="img-fluid hope-green-text" src="~/lib/media/site/images/icons/treasurer.svg" width="48" data-mdb-toggle="tooltip" title="Tesouraria" />
                                </a>
                            </li>
                            <li>
                                <a href="#" class="nav-link px-0 align-middle px-0 my-3">
                                    <img class="img-fluid hope-green-text" src="~/lib/media/site/images/icons/socialwork.svg" width="48" data-mdb-toggle="tooltip" title="Assistência social" />
                                </a>
                            </li>
                            @*<li>
                                <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                                <i class="fs-4 bi-bootstrap"></i> <span class="ms-1 d-none d-sm-inline">Bootstrap</span>
                                </a>
                                <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                                <li class="w-100">
                                <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Item</span> 1</a>
                                </li>
                                <li>
                                <a href="#" class="nav-link px-0"> <span class="d-none d-sm-inline">Item</span> 2</a>
                                </li>
                                </ul>
                                </li>*@
                        </ul>
                    </div>
                </div>
                <div class="col py-3" style="background-color: rgba(255, 255, 255, 0.6);">
                    <div class="row mx-2">
                        <div class="col-10">
                            <spam style="font-size: 14pt;">
                                <b>Lar dos Velhinhos - Guaratinguetá</b>
                            </spam>
                        </div>
                        <hr class="col-10"/>
                    </div>
                    <div class="container">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial"></partial>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
