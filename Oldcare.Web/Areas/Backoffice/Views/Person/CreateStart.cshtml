@model CreateStartPersonViewModel

@{
    ViewData["Title"] = "Cadastrar residente";
}

<section xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <div id="header" class="row oc-view-header-default">
        <div class="col-10">
            <h1 class="oc-view-title-default">
                <strong>Cadastrar Pessoa</strong>
            </h1>
            <h2 class="oc-view-subtitle-default oc-text-light-gray">Preencha os dados iniciais da 1° etapa.</h2>
        </div>
    </div>

    <div class="oc-steps">
        <ul class="navbar" type="none">
            <li class="mx-1">
                <a class="numberCircle">1</a>
            </li>
            <li class="mx-4">
                <a>2</a>
            </li>
            <li class="mx-1">
                <a>3</a>
            </li>
            <li class="mx-4">
                <a>4</a>
            </li>
        </ul>
    </div>

    <form asp-action="CreateStart" class="row mt-5">
        <div class="col-1">
            <img class="img-fluid" src="/lib/media/site/images/icons/person-vector.png" width="128"/>
            <a href="#" class="add"><i class="bi bi-plus-circle-fill"></i></a>
        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-12">
                    <div class="row mb-4">
                        <label asp-for="Name" class="col-2"></label>
                        <input asp-for="Name" class="col-10 oc-form-control" type="text"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="row">
                                <label asp-for="BirthDate" class="col-4"></label>
                                <input asp-for="BirthDate" class="col-8 oc-form-control" type="date"/>
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="row">
                                <label asp-for="Citizenship" class="col-4"></label>
                                <input asp-for="Citizenship" class="col-8 oc-form-control" type="text"/>
                                <span asp-validation-for="Citizenship" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-4">
                        <label asp-for="Gender" class="col-2"></label>
                        <select asp-for="Gender" class="col-4 oc-form-control">
                            <option selected>Selecione</option>
                            <option value="false">Feminino</option>
                            <option value="true">Masculino</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-5">
                        <div class="col-6">
                            <div class="row">
                                <label asp-for="RG" class="col-4"></label>
                                <input asp-for="RG" class="col-8 oc-form-control" type="text"/>
                                <span asp-validation-for="RG" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="row">
                                <label asp-for="CPF" class="col-4"></label>
                                <input asp-for="CPF" class="col-8 oc-form-control" type="text"/>
                                <span asp-validation-for="CPF" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col px-5 align-self-end text-end">
                <button type="submit" class="color-default oc-dark-btn oc-text-decoration-none">Avançar</button>
            </div>
        </div>
    </form>

</section>