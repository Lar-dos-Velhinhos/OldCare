@* @model TModel *@

@{
    ViewData["Title"] = "Cadastrar residente";
}

<section xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <div id="header" class="row oc-view-header-default">
        <div class="col-10">
            <h1 class="oc-view-title-default">
                <strong>Cadastrar Residente</strong>
            </h1>
            <h2 class="oc-view-subtitle-default oc-text-light-gray">Preencha os dados de informações adicionais.</h2>
        </div>
    </div>

    <div class="oc-steps" style="width: 200px;">
        <ul class="navbar" type="none">
            <li class="mx-1">
                <a >1</a>
            </li>
            <li class="mx-4">
                <a>2</a>
            </li>
            <li class="mx-1">
                <a class="numberCircle">3</a>
            </li>
            <li class="mx-4">
                <a>4</a>
            </li>
        </ul>
    </div>

    <form class="row mt-5">
        <div class="col-9">
            <div class="row">
                <div class="col-12">
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">Escolaridade:</label>
                                <select class="col-8 oc-form-control">
                                    <option selected>Selecione</option>
                                    <option value="0">Não alfabetizado(a)</option>
                                    <option value="1">Fundamental incompleto</option>
                                    <option value="2">Fundamental completo</option>
                                    <option value="3">Médio imcompleto</option>
                                    <option value="4">Médio completo</option>
                                    <option value="5">Graduação</option>
                                    <option value="6">Pós-Graduação</option>
                                    <option value="7">Mestrado</option>
                                    <option value="8">Doutorado</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">Profissão:</label>
                                <input class="col-8 oc-form-control" type="text"/>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">Estado civil:</label>
                                <select class="col-8 oc-form-control">
                                    <option selected>Selecione</option>
                                    <option value="0">Solteiro(a)</option>
                                    <option value="1">Casado(a)</option>
                                    <option value="2">Divorciado(a)</option>
                                    <option value="3">Viúvo(a)</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">Mobilidade:</label>
                                <select class="col-8 oc-form-control">
                                    <option selected>Selecione</option>
                                    <option value="0">Auto-Suficiente</option>
                                    <option value="1">Usa bengala</option>
                                    <option value="2">Usa andador</option>
                                    <option value="3">Cadeirante</option>
                                    <option value="4">Acamado</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">Mãe:</label>
                                <input class="col-8 oc-form-control" type="text"/>
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">Pai:</label>
                                <input class="col-8 oc-form-control" type="text"/>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row mb-4">
                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">SUS:</label>
                                <input class="col-8 oc-form-control" type="text"/>
                                <span class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="row">
                                <label class="col-4">Título de eleitor:</label>
                                <input class="col-8 oc-form-control" type="text"/>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col px-5 align-self-end text-end">
                <a asp-area="Backoffice" asp-action="CreateEnd" asp-controller="Person" class="col-5 color-default oc-dark-btn oc-text-decoration-none">Voltar</a>
                <a asp-area="Backoffice" asp-action="CreateEnd" asp-controller="Resident" class="col-7 color-default oc-dark-btn oc-text-decoration-none">Avançar</a>
            </div>
        </div>
    </form>

</section>