@using OldCare.Contexts.SharedContext.Enums
@model OldCare.Contexts.PersonContext.UseCases.Create.Request

@{

}

<div class="oc-row">
    <div class="col-12">
        <div class="col-12 d-flex">
            <div class="col-9">
                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="Account" asp-controller="Profile" asp-action="Home" style="text-decoration: none;">OldCare</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Pessoas</li>
                    </ol>
                </nav>
            </div>
            <div class="col-3 d-flex">
                <div class="progresses">
                    <div class="steps">
                        <span>
                            <i class="fa fa-check"></i>
                        </span>
                    </div>
                    <span class="line"></span>
                    <div class="steps bg-cian">
                        <span>
                            <span class="font-weight-bold">2</span>
                        </span>
                    </div>
                    <span class="line"></span>
                    <div class="steps">
                        <span class="font-weight-bold">3</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-light container-fluid p-5" style="border-radius: 8px; height: 85vh;">
    <h2>
        <b>ADICIONAR PESSOA</b>
    </h2>
    <p>Dados de endereço da pessoa a ser adicionada.</p>

    <form action="" class="row" method="post">

        <!-- Hidden form fields -->

        <input asp-for="FirstName" type="text" class="form-control" hidden readonly>
        <input asp-for="LastName" type="text" class="form-control" hidden readonly>
        <input asp-for="BirthDate"  type="datetime" class="form-control" hidden readonly>
        <input asp-for="Nationality" type="text" class="form-control" hidden readonly>
        <input asp-for="Citizenship" type="text" class="form-control" hidden readonly>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<EGender>()" class="form-control" hidden readonly>
        </select>
        
        <input asp-for="FullNumber" type="text" class="form-control" hidden readonly>
        <input asp-for="MotherName" type="text" class="form-control" hidden readonly>
        <input asp-for="FatherName" type="text" class="form-control" hidden readonly>
        <input asp-for="Obs" type="text" class="form-control" hidden  readonly>

        <!-- End of hidden form fields -->

        <div class="col-10">
            <div class="mb-3 row">
                <label asp-for="ZipCode" class="col-sm-2 col-form-label">CEP</label>
                <div class="col-sm-2">
                    <input asp-for="ZipCode" type="text" class="form-control">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-8">
                    <div class="mb-3 row">
                        <label asp-for="Street" class="col-sm-3 col-form-label">Logradouro</label>
                        <div class="col-sm-9">
                            <input asp-for="Street" type="text" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="mb-3 row text-end">
                        <label asp-for="AddressNumber" class="col-sm-4 col-form-label">N°</label>
                        <div class="col-sm-8">
                            <input asp-for="AddressNumber" type="text" class="form-control">
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-6">
                    <div class="mb-3 row">
                        <label asp-for="Complement" class="col-sm-4 col-form-label">Complemento</label>
                        <div class="col-sm-8">
                            <input asp-for="Complement" type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-3 row">
                        <label asp-for="District" class="col-sm-2 col-form-label">Bairro</label>
                        <div class="col-sm-10">
                            <input asp-for="District" type="text" class="form-control">
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-6">
                    <div class="mb-3 row">
                        <label asp-for="City" class="col-sm-4 col-form-label">Cidade</label>
                        <div class="col-sm-8">
                            <input asp-for="City" type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="mb-3 row">
                        <label asp-for="State" class="col-sm-2 col-form-label">UF</label>
                        <div class="col-sm-10">
                            <select asp-items="Html.GetEnumSelectList<EBrazilianStates>()" asp-for="State" class="form-control">
                                <option selected>Selecione</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-12">
                    <div class="mb-3 row">
                        <label asp-for="Notes" class="col-sm-2 col-form-label text-end">Observações</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Notes" class="form-control" style="resize: none;"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-100 text-end">
                <input asp-area="Person" asp-controller="Person" asp-action="GetNewPerson" class="btn oc-btn-primary" type="submit" formmethod="get" name="submitButton" value="Voltar"/>
                <input asp-area="Person" asp-controller="Person" asp-action="GetFinalStepFromCreate" class="btn oc-btn-primary" type="submit" name="submitButton" value="Continuar"/>
            </div>
        </div>
        <div class="col-2" asp-validation-summary="All"></div>
    </form>
</div>