@model OldCare.Contexts.AccountContext.UseCases.Authenticate.Request
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "";
    ViewData["Description"] = "";
    ViewData["Keywords"] = "";
    ViewData["URL"] = "";
    ViewData["Image"] = "";
}

<section class="p-0 d-flex align-items-center position-relative overflow-hidden">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100">
                @{ await Html.RenderPartialAsync("Partials/_SidePanelPartial"); }
            </div>

            <div class="col-12 col-lg-6 m-auto">
                <div class="row my-5">
                    <div class="col-sm-10 col-xl-8 m-auto">
                        <h2>Vamos começar?</h2>
                        <p class="lead mb-4">Aqui é o início da sua jornada 💜</p>

                        <form asp-action="Login">

                            <div class="mb-2">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3">
                                        <i class="bi bi-envelope-fill"></i>
                                    </span>
                                    <input type="email" class="form-control border-0 bg-light rounded-end ps-1" placeholder="E-mail" asp-for="Email">
                                </div>
                            </div>

                            <div class="mb-2">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3">
                                        <i class="bi bi-lock-fill"></i>
                                    </span>
                                    <input type="password" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Senha" asp-for="Password">
                                </div>
                            </div>

                            <input asp-for="ReturnUrl" type="hidden" class="form-control"/>

                            <div asp-validation-summary="All" class="mt-2 text-danger"></div>

                            <div class="align-items-center mt-0">
                                <div class="d-grid">
                                    <button class="btn btn-primary mb-0" type="submit">
                                        Entrar
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="mt-4 text-center">
                            <span>Ainda não tem uma conta?<a href="~/comecar"> Clique aqui para começar <strong>gratuitamente</strong></a></span> <br>
                            <br>
                            <strong>
                                <a href="~/minha-conta/senha/restaurar">
                                    Esqueci minha senha
                                </a>
                            </strong>
                            <br>
                            <hr>
                            <br>
                            <small>
                                Caso não tenha recebido o código de verificação da sua conta via E-mail
                            </small>
                            <br>
                            <strong>
                                <a href="~/minha-conta/email/verificar/reenviar">
                                    Preciso de um novo código de verificação
                                </a>
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>