@model OldCare.Contexts.AccountContext.UseCases.ResendEmailVerificationCode.Request
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "";
    ViewData["Description"] = "";
    ViewData["Keywords"] = "";
    ViewData["URL"] = "";
    ViewData["Image"] = "";
}

<section class="p-0 d-flex align-items-center position-relative overflow-hidden">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100">
                @{ await Html.RenderPartialAsync("Partials/_SidePanelPartial"); }
            </div>

            <div class="col-12 col-lg-6 m-auto">
                <div class="row my-5">
                    <div class="col-sm-10 col-xl-8 m-auto">
                        <img src="~/assets/images/logo-light.svg" class="h-40px mb-2" alt="OldCare"/>
                        <br><br>
                        <h2>Código de ativação</h2>
                        
                        <p class="lead mb-4">
                            Caso não tenha recebido o código de ativação da sua conta
                            informe seu E-mail abaixo.
                        </p>

                        <form asp-action="ResendEmailVerificationCode">
                            <div class="mb-2">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-light rounded-start border-0 text-secondary px-3">
                                        <i class="bi bi-envelope-fill"></i>
                                    </span>
                                    <input type="email" class="form-control border-0 bg-light rounded-end ps-1" placeholder="E-mail" asp-for="Email">
                                </div>
                            </div>
                            
                            @* <div class="g-recaptcha" data-sitekey="@Configuration.Google.ReCaptcha.SiteKey"></div> *@
                            
                            <div asp-validation-summary="All" class="mt-2 text-danger"></div>

                            <div class="alert alert-warning" role="alert">
                                <small>
                                    <strong>IMPORTANTE</strong><br>
                                    Verifique sempre a pasta Lixo Eletrônico do seu E-mail para garantir que nossas mensagens
                                    não estão sendo enviadas para lá.
                                </small>
                            </div>
                            
                            <div class="align-items-center mt-0">
                                <div class="d-grid">
                                    <button class="btn btn-primary mb-0" type="submit">Reenviar código</button>
                                </div>
                            </div>
                        </form>

                        <div class="mt-4 text-center">
                            <span>Já tem uma conta?<a href="~/entrar"> Clique aqui para entrar</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js"></script>
}