@model Comorbidity;

@{
    ViewData["Title"] = "Comorbidades";
}

<div class="container">
    <h2>Cadastrar Comorbidade</h2>
    <form asp-area="Backoffice" asp-controller="Comorbidity" asp-action="Create" method="post" class="">
        <input asp-for="Id" type="text" hidden placeholder="">    
        <input asp-for="ResidentId" type="text" hidden placeholder="">        
        <div class="row">
            <div class="col-6 mt-1">
                <label asp-for="Description"></label>
                <input asp-for="Description" type="text" class="form-control mt-2" style="" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-6 mt-1">
                        <label asp-for="StartDate"></label>
                        <input asp-for="StartDate" type="date" class="form-control mt-2" style="" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-6 mt-1">
                        <label asp-for="EndDate"></label>
                        <input asp-for="EndDate" type="date" class="form-control mt-2" style="" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6 mt-1">
                <label asp-for="Restriction"></label>
                <input asp-for="Restriction" type="text" class="form-control mt-2" style="" />
                <span asp-validation-for="Restriction" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-6 mt-1">
                <label asp-for="Note"></label>
                <input asp-for="Note" type="text" class="form-control mt-2" style="" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
        </div>
         <button class="btn-primary m-3 " type="submit" style="">Salvar</button>
    </form>
</div>