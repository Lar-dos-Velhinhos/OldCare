@model Person
@{
    ViewData["Title"] = "Editar";
}

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address"/>
    </div>
    
    <button type="submit">Salvar</button>
</form>